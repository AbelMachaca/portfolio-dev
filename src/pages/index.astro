---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import SocialPill from '../components/SocialPill.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import MailIcon from '../components/icons/Mail.astro'
import Experience from '../components/Experience.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout title="Portfolio de Abel Machaca - Desarrollador y Programador Web con 1 año de experiencia"
description="Contactame para crear tu aplicación web o móvil. Desarrollador Web con conocimientos en Salesforce. Especializado en crear aplicaciones únicas."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img 
				class="rounded-full w-12 mb-4" 
				src="/img/AbelMachaca2R.webp" 
				alt="abel foto"
			/>
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hola, soy Abel Machaca 
				<a 
				href="https://www.linkedin.com/in/abelmachaca/" 
				target="_blank"
				rel="noopener"
				class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
			</a>
			</h1>

			<h2 class="text-xl lg:text-2xl  text-wrap max-w-[700px]">
				<span>+1 año de experiencia.</span> 
				<span class="text-yellow-200/90 ">
				Desarrollador full stack con conocimientos de desarrollo en Salesforce</span>.
				<span class="text-red-200/90"> De Buenos Aires, Argentina. </span>
				<span class="opacity-75">
					Especializado en crear aplicaciones únicas
			</span>
				</h2>
				<nav class="flex gap-4 mt-8 flex-wrap">
					
						<SocialPill href="https://www.linkedin.com/in/abelmachaca/">
							<LinkedInIcon class="size-4 md:size-6" />
							LinkedIn
						</SocialPill>
						<SocialPill href="https://github.com/AbelMachaca">
							<GitHubIcon class="size-4 md:size-6" />
							GitHub
						</SocialPill>
						<SocialPill href="mailto:abelmachaca99@gmail.com">
							<MailIcon class="size-4 md:size-6" />
							abelmachaca99@gmail.com
						</SocialPill>
					
				</nav>
			</SectionContainer>
			<SectionContainer id="experiencia">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
					<Briefcase class="size-7 " />
					Experiencia laboral
				</h2>
				<Experience />
			</SectionContainer>


			<SectionContainer id="proyectos">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
					<CodeIcon class="size-7 " />
					Proyectos
				</h2>
				<Projects />
			</SectionContainer>
		</main>
	</Layout>
